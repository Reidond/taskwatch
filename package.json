{
	"name": "taskwatch",
	"private": true,
	"workspaces": ["apps/*", "packages/*"],
	"scripts": {
		"dev": "bun run --parallel dev:api dev:web",
		"dev:api": "bun run --cwd apps/api dev",
		"dev:web": "bun run --cwd apps/web dev",
		"dev:daemon": "bun run --cwd apps/daemon dev",
		"build": "bun run --parallel build:api build:web build:daemon",
		"build:api": "bun run --cwd apps/api build",
		"build:web": "bun run --cwd apps/web build",
		"build:daemon": "bun run --cwd apps/daemon build",
		"deploy:api": "bun run --cwd apps/api deploy",
		"deploy:web": "bun run --cwd apps/web deploy",
		"db:migrate": "bun run --cwd apps/api db:migrate",
		"db:migrate:local": "bun run --cwd apps/api db:migrate:local",
		"typecheck": "bun --filter '*' typecheck",
		"lint": "biome check .",
		"lint:fix": "biome check --write .",
		"format": "biome format --write ."
	},
	"devDependencies": {
		"@biomejs/biome": "^1.9.4",
		"typescript": "^5.7.2"
	}
}

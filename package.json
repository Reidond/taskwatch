{
	"name": "taskwatch",
	"version": "0.1.0",
	"private": true,
	"workspaces": ["apps/*", "packages/*"],
	"scripts": {
		"dev": "bun --filter '!@taskwatch/daemon' dev",
		"dev:api": "bun run --filter './apps/api' dev",
		"dev:web": "bun run --filter './apps/web2' dev",
		"dev:daemon": "bun run --filter './apps/daemon' dev",
		"build": "bun run --filter './apps/*' build",
		"build:api": "bun run --filter './apps/api' build",
		"build:web": "bun run --filter './apps/web2' build",
		"build:daemon": "bun run --filter './apps/daemon' build",
		"deploy:api": "bun run --filter './apps/api' deploy",
		"deploy:web": "bun run --filter './apps/web2' deploy",
		"db:migrate": "bun run --filter './apps/api' db:migrate",
		"db:migrate:local": "bun run --filter './apps/api' db:migrate:local",
		"typecheck": "bun --filter '*' typecheck",
		"lint": "biome check .",
		"lint:fix": "biome check --write .",
		"format": "biome format --write ."
	},
	"devDependencies": {
		"@biomejs/biome": "^1.9.4",
		"typescript": "^5.7.2"
	}
}
